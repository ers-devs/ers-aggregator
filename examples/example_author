# create an author or add new information about him 
curl -v -X POST -H "Content-Type: application/x-www-form-urlencoded" --data "a_id=<author1>&a_p=<name>&a_v=\"TM\""  "http://diufpc304.unifr.ch:8080/ers/author"

# delete the graph associated with given authors; the metadata about the author is not erased 
curl -v -X DELETE "http://diufpc304.unifr.ch:8080/ers/author?a_id=<author1>"
